<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>安装后台显示界面</title>
    <link rel="stylesheet" href="./bootstrap/css/bootstrap.css" />
    <script src="../public/jquery-3.3.1/jquery-3.3.1.min.js"></script>
    <script src="../public/jquery-3.3.1/jquery.validate.min.js"></script>
    <script src="../public/jquery-3.3.1/messages_zh.js"></script>
    <script src="../public/popper/popper.min.js"></script>
    <script src="../public/bootstrap/js/bootstrap.js"></script>
    

  </head>

  <body>

      <div class="jumbotron jumbotron-fluid">
          <div class="container">
              <h1>Kubernete安装界面</h1>
          </div>
      </div>
      <div style="display:none"><></div>

      <div class="progress progress-striped active" style="width: 800px;margin: 0 auto" >
          <div id="bar" class="progress-bar progress-bar-success" role="progressbar"
               aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"
               >
              <span id="per"><%=percent %></span>
          </div>
      </div>
      <br/>
       <div style="text-align: center">
          <textarea  id="showResult" style="width:800px;height:100px;"><%= data  %></textarea>
          <!-- <form action="/install" method="post">
            <button id="" onclick="">开始安装</button>
          </form> -->  
      </div>

      <script language="JavaScript">
          (function(){
            
            var t =  setInterval(myrefresh,1000); //指定1秒刷新一次
            
            function myrefresh()
            {
               var per = document.getElementById('per').innerText;
               document.getElementById('bar').style.width = per +"%";
              
               if(per > 10000){
                window.clearInterval(t);
              }
              window.location.reload();
             }
          })();  
         </script>
  </body>
</html>
